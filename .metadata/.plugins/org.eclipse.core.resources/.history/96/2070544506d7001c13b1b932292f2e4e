package com.algaworks.listas;

import java.util.ArrayList;
import java.util.List;

//WARM UP MSR 0 
public class Exemplo1 {

	public static void main (String[] args) {
		
		//declarar lista , interface de lista java .util 
		List<String> nomes = new ArrayList<>();
		
		//Gravar itens na lista 
		nomes.add("José");
		nomes.add("Maria");
		nomes.add("Zezin");
		
		System.out.println(nomes);
		
		//Remover itens adicionados na lista, usando o indice como referencia 
		//seta qual elemento deseja eliminar com base no indice ,começa no 0
		nomes.remove(0);
		System.out.println(nomes);
		
		//Remover itens adicionados na lista, usando o conteúdo como referência 
		nomes.remove("Zezin");
		System.out.println(nomes);
		
		nomes.add("José");
		nomes.add("Zezin");
		System.out.println(nomes);
		
		//Itera,, percorre a Lista 
		//pelo índice
		for (int i = 0; i < nomes.size(); i ++ ) {
			
		}
		
	}
}
